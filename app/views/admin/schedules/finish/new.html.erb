<h1>Finish schedule to <%= @schedule.talker %></h1>

<%= simple_form_for([:admin, @schedule], class: 'form-horizontal') do |f| %>
  <p>
    <strong>Talker:</strong>
    <%= @schedule.talker %>
  </p>

  <p>
    <strong>Listener:</strong>
    <%= @schedule.listener %>
  </p>

  <p>
    <strong>Scheduled to:</strong>
    <%=l @schedule.scheduled_to, format: :short %>
  </p>

  <%= f.input :occurred_at, required: true, as: :date_time_picker %>
  <%= f.input :duration,    required: true %>

  <%= f.submit 'Finish!' %>
<% end %>
