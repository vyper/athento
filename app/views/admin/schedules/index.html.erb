<h1>Agendamentos</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Ouvinte</th>
      <th>Falante</th>
      <th>Agendado para</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.listener %></td>
        <td><%= schedule.talker %></td>
        <td><%=l schedule.scheduled_to, format: :short %></td>
        <td><%= link_to 'Visualizar', [:admin, schedule] %></td>
        <td><%= link_to 'Editar', edit_admin_schedule_path(schedule) %></td>
        <td><%= link_to 'Remover', [:admin, schedule], method: :delete, data: { confirm: 'VocÃª tem certeza que deseja remover?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

