<h1>Schedules</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Listener</th>
      <th>Talker</th>
      <th>Scheduled to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.listener %></td>
        <td><%= schedule.talker %></td>
        <td><%=l schedule.scheduled_to, format: :short %></td>
        <td><%= link_to 'Show', [:admin, schedule] %></td>
        <td><%= link_to 'Edit', edit_admin_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', [:admin, schedule], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_admin_schedule_path %>
